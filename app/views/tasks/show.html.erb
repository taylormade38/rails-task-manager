
<div class="container">

  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>

 <% if @task.completed %>
    <p><input type="checkbox" checked>This task is completed</p>
<% else %>
    <p><input type="checkbox">This task is not completed yet</p>
<% end %>

</div>
<div class="container buttons">
<%= link_to "Edit Task", edit_task_path(@task), class:"btn btn-secondary" %>
</br>

<%= link_to "Back to Tasks", tasks_path, class:"btn btn-info" %>

  <%= link_to "Delete This Task",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete?" }, class:"btn btn-danger" %>

</div>


